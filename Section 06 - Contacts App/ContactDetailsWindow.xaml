<Window x:Class="Section_06___Contacts_App.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Section_06___Contacts_App"
        mc:Ignorable="d"
        Title="ContactDetailsWindow" Height="220" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"/>
            <TextBlock Text="Phone Number:"/>
            <TextBox x:Name="phoneTextBox" Margin="0,0,0,5"/>
            <Button x:Name="updateButton" Content="Update" Click="updateButton_Click" Margin="0,0,0,5"/>
            <Button x:Name="deleteButton" Content="Delete" Click="deleteButton_Click" Foreground="White" Background="Red" Margin="0,0,0,5"/>

        </StackPanel>
    </Grid>
</Window>
