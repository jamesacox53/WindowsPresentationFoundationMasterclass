<UserControl x:Class="Section_11___Notes_App.View.UserControls.DisplayNoteUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Section_11___Notes_App.View.UserControls"
             mc:Ignorable="d"
             Background="MintCream"
             d:DesignHeight="20" d:DesignWidth="121">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="116"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
        <TextBlock Text="{Binding Path=Title}" Foreground="Black" FontSize="14" FontWeight="Normal" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Path=UpdatedAt}" Foreground="Black" FontSize="10" FontWeight="Normal" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
